<h1>Listening articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspsan="2"></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <th><%= article.title %></th>
      <th><%= article.text %></th>
      <th><%= link_to 'show', article_path(article) %></th>
      <th><%= link_to 'edit', edit_article_path(article) %></th>
       <td><%= link_to 'destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>